<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Digital Settring display</name>
 <w-base>100</w-base>
 <h-base>48</h-base>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/B-52F/Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
   </texture>
    <w>100</w>
    <h>48</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Steering</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>12</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Front Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Front:</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-4</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Front Display</name>
   <type>text</type>
   <font>led</font>
   <point-size>5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/controls/gear/steering-front-deg</property>
     <format>%02.3f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-5</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Rear Title</name>
   <type>text</type>
   <point-size>12</point-size>
   <color>
    <red>0.8</red>
    <green>0.8</green>
    <blue>0.8</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>Rear:</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-46</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-19</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Rear Display</name>
   <type>text</type>
   <font>led</font>
   <point-size>5</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property>/controls/gear/steering-rear-deg</property>
     <format>%02.3f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

</PropertyList>
